{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "lib": ["DOM", "ESNext"],
    "allowJs": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "strict": false,
    "target": "esnext",
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "declaration": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "baseUrl": "src"
  }
}
